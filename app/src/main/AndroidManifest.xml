<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gstechworks.digicardo">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Digicardo">
        <activity android:name=".Activities.RegisteredBusinessActivity"></activity>
        <activity android:name=".Activities.TrendingCategoryActivity" />
        <activity android:name=".Activities.OffersActivity" />
        <activity android:name=".Activities.HelpActivity" />
        <activity android:name=".Activities.EditProfileActivity" />
        <activity android:name=".Activities.MyProfileActivity" />
        <activity android:name=".Activities.ContactDetailActivity" />
        <activity android:name=".Activities.AddServicesActivity" />
        <activity android:name=".Activities.AddProductActivity" />
        <activity android:name=".Activities.BusinessRegistrationActivity" />
        <activity android:name=".Activities.NotificationActivity" />
        <activity android:name=".Activities.OTPActivity" />
        <activity android:name=".Activities.LoginActivity" />
        <activity android:name=".Activities.HomeActivity" />
        <activity android:name=".Activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>