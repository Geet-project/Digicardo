<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp">
        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/ic_baseline_cancel_24"
            android:layout_marginTop="@dimen/_10sdp"
            android:id="@+id/closedrawer"
            android:layout_marginLeft="@dimen/_5sdp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/closedrawer"
            android:padding="@dimen/_10sdp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Geetika Sachdeva"
                    android:textColor="#000"
                    android:textSize="22sp"
                    android:id="@+id/UserNameDrawer"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Manage Profile &amp; Settings"
                    android:textSize="14sp"
                    android:id="@+id/manageprofilebtn"/>
            </LinearLayout>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/circularprofile"
                android:id="@+id/DrawerProfilePicture"
                android:layout_weight="2"/>
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>