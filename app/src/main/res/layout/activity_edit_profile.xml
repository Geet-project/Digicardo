<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#f7f8f9"
        tools:context=".Activities.BusinessRegistrationActivity">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:id="@+id/toolbar"
            android:background="#fff"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            android:elevation="@dimen/_3sdp"
            app:contentInsetStartWithNavigation="0dp"
            app:title=""
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_baseline_arrow_back_ios_24"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:id="@+id/BackArrow"/>
                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="start"
                    android:layout_toRightOf="@id/BackArrow"
                    android:src="@drawable/digicardologo"/>
                <ImageView
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:id="@+id/noti_icon"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/notiicon"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="end"/>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_10sdp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Edit Profile"
                    android:textColor="@color/commoncolor"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="@color/textcolor"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="16sp"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    app:cardBackgroundColor="#fff"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="@dimen/_5sdp">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@null"
                        android:drawableLeft="@drawable/ic_telephone"
                        android:paddingLeft="@dimen/_10sdp"
                        android:hint="DigiCardo"
                        android:drawablePadding="@dimen/_15sdp"
                        android:id="@+id/FounderNameEt"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mobile No."
                    android:textColor="@color/textcolor"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="16sp"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    app:cardBackgroundColor="#fff"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="@dimen/_5sdp">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@null"
                        android:drawableLeft="@drawable/ic_telephone"
                        android:paddingLeft="@dimen/_10sdp"
                        android:hint="+91 9564454541"
                        android:drawablePadding="@dimen/_15sdp"
                        android:id="@+id/BusinessNameEt"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email Id"
                    android:textColor="@color/textcolor"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="16sp"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    app:cardBackgroundColor="#fff"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="@dimen/_5sdp">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@null"
                        android:drawableLeft="@drawable/ic_telephone"
                        android:paddingLeft="@dimen/_10sdp"
                        android:hint="digicardo@gmail.com"
                        android:drawablePadding="@dimen/_15sdp"
                        android:id="@+id/BusinessVisionEt"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textColor="@color/textcolor"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="16sp"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    app:cardBackgroundColor="#fff"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="@dimen/_5sdp">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:lines="4"
                        android:gravity="top"
                        android:paddingTop="@dimen/_10sdp"
                        android:inputType="textMultiLine"
                        android:scrollbars="vertical"
                        android:paddingLeft="@dimen/_10sdp"
                        android:hint="About Business"
                        android:drawablePadding="@dimen/_15sdp"
                        android:id="@+id/BusinessDescriptionEt"/>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Country"
                            android:textColor="@color/textcolor"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textSize="16sp"/>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="#fff"
                            android:layout_marginTop="@dimen/_5sdp"
                            app:cardCornerRadius="@dimen/_5sdp"
                            app:cardUseCompatPadding="true">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <Spinner
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_35sdp"
                                    style="@style/mySpinnerItemStyle"
                                    android:entries="@array/BusinessCategory"
                                    android:background="@drawable/spinner_bg"
                                    android:id="@+id/Countryspinner"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="State"
                            android:textColor="@color/textcolor"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textSize="16sp"/>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="#fff"
                            android:layout_marginTop="@dimen/_5sdp"
                            app:cardCornerRadius="@dimen/_5sdp"
                            app:cardUseCompatPadding="true">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <Spinner
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_35sdp"
                                    style="@style/mySpinnerItemStyle"
                                    android:entries="@array/BusinessCategory"
                                    android:background="@drawable/spinner_bg"
                                    android:id="@+id/Statespinner"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="City"
                            android:textColor="@color/textcolor"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textSize="16sp"/>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="#fff"
                            android:layout_marginTop="@dimen/_5sdp"
                            app:cardCornerRadius="@dimen/_5sdp"
                            app:cardUseCompatPadding="true">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <Spinner
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_35sdp"
                                    style="@style/mySpinnerItemStyle"
                                    android:entries="@array/BusinessCategory"
                                    android:background="@drawable/spinner_bg"
                                    android:id="@+id/Cityspinner"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pincode"
                            android:textColor="@color/textcolor"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textSize="16sp"/>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="#fff"
                            android:layout_marginTop="@dimen/_5sdp"
                            app:cardCornerRadius="@dimen/_5sdp"
                            app:cardUseCompatPadding="true">
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:background="@null"
                                android:lines="2"
                                android:inputType="number"
                                android:maxLength="6"
                                android:drawableLeft="@drawable/ic_telephone"
                                android:paddingLeft="@dimen/_10sdp"
                                android:hint="302000"
                                android:drawablePadding="@dimen/_15sdp"
                                android:id="@+id/PinCodeEt"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>





                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:layout_marginRight="@dimen/_30sdp"
                    app:cardBackgroundColor="#fff"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="@dimen/_5sdp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_35sdp"
                            android:text="Founder Image"
                            android:layout_centerVertical="true"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:id="@+id/FounderImgText"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="Upload"
                            android:id="@+id/ChooseImg"
                            android:layout_marginRight="@dimen/_5sdp"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <ImageView
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_150sdp"
                    android:src="@drawable/picture"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:id="@+id/PreviewFounderImg"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/do_you_want_to_become_reseller"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:textSize="17sp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">
                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_30sdp"
                            app:cardBackgroundColor="@color/commoncolor"
                            app:cardCornerRadius="@dimen/_3sdp"
                            android:id="@+id/YesResellerCard"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:background="@color/commoncolor"
                            android:text="Yes">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Yes"
                                android:textSize="16sp"
                                android:id="@+id/ResellerValue"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="#fff"/>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_toRightOf="@id/YesResellerCard"
                            android:layout_marginLeft="@dimen/_5sdp"
                            app:cardBackgroundColor="@color/commoncolor"
                            app:cardCornerRadius="@dimen/_3sdp"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:background="@color/commoncolor"
                            android:text="Yes">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="No"
                                android:textSize="16sp"
                                android:id="@+id/NoReseller"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="#fff"/>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_alignParentBottom="true">
                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        app:cardBackgroundColor="@color/commoncolor"
                        app:cardCornerRadius="@dimen/_3sdp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@color/commoncolor">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Submit"
                            android:textSize="16sp"
                            android:id="@+id/SubmitBtnEditProfile"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="#fff"/>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>


    </LinearLayout>
</layout>