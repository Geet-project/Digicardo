<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="#fff"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="@dimen/_5sdp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_10sdp"
                android:background="#f7f8f9"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Your Address"
                    android:textColor="@color/commoncolor"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:id="@+id/AddProductText"
                    android:gravity="center"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Address Title"
                    android:textColor="@color/textcolor"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:textSize="16sp"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    app:cardBackgroundColor="#fff"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="@dimen/_5sdp">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@null"
                        android:drawableLeft="@drawable/ic_telephone"
                        android:paddingLeft="@dimen/_10sdp"
                        android:hint="Lorem Ipsum"
                        android:drawablePadding="@dimen/_15sdp"
                        android:id="@+id/AddressTitleEt"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textColor="@color/textcolor"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="16sp"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    app:cardBackgroundColor="#fff"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="@dimen/_5sdp">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:lines="4"
                        android:gravity="top"
                        android:paddingTop="@dimen/_10sdp"
                        android:inputType="textMultiLine"
                        android:scrollbars="vertical"
                        android:paddingLeft="@dimen/_10sdp"
                        android:hint="About Product"
                        android:drawablePadding="@dimen/_15sdp"
                        android:id="@+id/BusinessDescriptionEt"/>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Country"
                            android:textColor="@color/textcolor"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textSize="16sp"/>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="#fff"
                            android:layout_marginTop="@dimen/_5sdp"
                            app:cardCornerRadius="@dimen/_5sdp"
                            app:cardUseCompatPadding="true">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <Spinner
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_35sdp"
                                    style="@style/mySpinnerItemStyle"
                                    android:entries="@array/BusinessCategory"
                                    android:background="@drawable/spinner_bg"
                                    android:id="@+id/Countryspinner"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="State"
                            android:textColor="@color/textcolor"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textSize="16sp"/>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="#fff"
                            android:layout_marginTop="@dimen/_5sdp"
                            app:cardCornerRadius="@dimen/_5sdp"
                            app:cardUseCompatPadding="true">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <Spinner
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_35sdp"
                                    style="@style/mySpinnerItemStyle"
                                    android:entries="@array/BusinessCategory"
                                    android:background="@drawable/spinner_bg"
                                    android:id="@+id/Statespinner"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="City"
                            android:textColor="@color/textcolor"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textSize="16sp"/>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="#fff"
                            android:layout_marginTop="@dimen/_5sdp"
                            app:cardCornerRadius="@dimen/_5sdp"
                            app:cardUseCompatPadding="true">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <Spinner
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_35sdp"
                                    style="@style/mySpinnerItemStyle"
                                    android:entries="@array/BusinessCategory"
                                    android:background="@drawable/spinner_bg"
                                    android:id="@+id/Cityspinner"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pincode"
                            android:textColor="@color/textcolor"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textSize="16sp"/>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="#fff"
                            android:layout_marginTop="@dimen/_5sdp"
                            app:cardCornerRadius="@dimen/_5sdp"
                            app:cardUseCompatPadding="true">
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:background="@null"
                                android:lines="2"
                                android:inputType="number"
                                android:maxLength="6"
                                android:drawableLeft="@drawable/ic_telephone"
                                android:paddingLeft="@dimen/_10sdp"
                                android:hint="302000"
                                android:drawablePadding="@dimen/_15sdp"
                                android:id="@+id/PinCodeEt"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Direction URL"
                    android:textColor="@color/textcolor"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="16sp"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    app:cardBackgroundColor="#fff"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="@dimen/_5sdp">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@null"
                        android:layout_gravity="center"
                        android:drawableLeft="@drawable/ic_telephone"
                        android:inputType="textMultiLine"
                        android:scrollbars="vertical"
                        android:paddingLeft="@dimen/_10sdp"
                        android:hint="MAP URL"
                        android:drawablePadding="@dimen/_15sdp"
                        android:id="@+id/DirectionURLEt"/>
                </androidx.cardview.widget.CardView>


                <Button
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="Submit"
                    android:id="@+id/Submitbtn"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_5sdp"/>
                <Button
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="Cancel"
                    android:id="@+id/Cancelbtn"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_5sdp"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>



    </androidx.core.widget.NestedScrollView>


</LinearLayout>