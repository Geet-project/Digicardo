<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="#fff"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="@dimen/_5sdp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_20sdp"
                android:background="#f7f8f9"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add your product"
                    android:textColor="@color/commoncolor"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:id="@+id/AddProductText"
                    android:gravity="center"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Product Title"
                    android:textColor="@color/textcolor"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:textSize="16sp"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    app:cardBackgroundColor="#fff"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="@dimen/_5sdp">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@null"
                        android:drawableLeft="@drawable/ic_telephone"
                        android:paddingLeft="@dimen/_10sdp"
                        android:hint="Lorem Ipsum"
                        android:drawablePadding="@dimen/_15sdp"
                        android:id="@+id/FounderNameEt"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Product Price"
                    android:textColor="@color/textcolor"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="16sp"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    app:cardBackgroundColor="#fff"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="@dimen/_5sdp">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@null"
                        android:drawableLeft="@drawable/ic_telephone"
                        android:paddingLeft="@dimen/_10sdp"
                        android:hint="Price"
                        android:inputType="number"
                        android:drawablePadding="@dimen/_15sdp"
                        android:id="@+id/ProductPriceEt"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Main Category"
                    android:textColor="@color/textcolor"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="16sp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#fff"
                    android:layout_marginTop="@dimen/_5sdp"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:cardUseCompatPadding="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            style="@style/mySpinnerItemStyle"
                            android:entries="@array/BusinessCategory"
                            android:background="@drawable/spinner_bg"
                            android:id="@+id/MainCategoryspinner"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sub Category"
                    android:textColor="@color/textcolor"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="16sp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#fff"
                    android:layout_marginTop="@dimen/_5sdp"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:cardUseCompatPadding="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            style="@style/mySpinnerItemStyle"
                            android:entries="@array/BusinessCategory"
                            android:background="@drawable/spinner_bg"
                            android:id="@+id/SubCategoryspinner"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Product Description"
                    android:textColor="@color/textcolor"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="16sp"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    app:cardBackgroundColor="#fff"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="@dimen/_5sdp">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:lines="4"
                        android:gravity="top"
                        android:paddingTop="@dimen/_10sdp"
                        android:inputType="textMultiLine"
                        android:scrollbars="vertical"
                        android:paddingLeft="@dimen/_10sdp"
                        android:hint="About Product"
                        android:drawablePadding="@dimen/_15sdp"
                        android:id="@+id/BusinessDescriptionEt"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    app:cardBackgroundColor="#fff"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="@dimen/_5sdp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_35sdp"
                            android:text="Product Image"
                            android:layout_centerVertical="true"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:id="@+id/FounderImgText"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:text="Upload"
                            android:id="@+id/ChooseImg"
                            android:layout_marginRight="@dimen/_5sdp"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <ImageView
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_150sdp"
                    android:src="@drawable/picture"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:id="@+id/PreviewFounderImg"/>

                <Button
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="Submit"
                    android:id="@+id/Submitbtn"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_5sdp"/>
                <Button
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="Cancel"
                    android:id="@+id/Cancelbtn"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_5sdp"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>



    </androidx.core.widget.NestedScrollView>


</LinearLayout>